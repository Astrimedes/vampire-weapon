{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        // "linebreak-style": [
        //     "error",
        //     "windows"
        // ],
        // "quotes": [
        //     "error",
        //     "single"
        // ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": [
            "disabled"
        ]
        // "no-multiple-empty-lines": [
        //     "error",
        //     {
        //         "max": 1,
        //         "maxEOF": 0
        //     }
        // ]
    },
    "ignorePatterns": [
        "**/dist/*.*",
        "**/buildtools/*.*",
        "**/build/*.*",
        "package-lock.json",
        "package.json",
        ".eslintrc.json"
    ]
}